{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@icons/*": ["src/components/icons/*"],
      "@pages/*": ["src/pages/*"],
      "@data/*": ["src/data/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@context/*": ["src/context/*"],
      "@enums/*":  ["src/enums/*"],
      "@frontendTypes/*": ["src/types/*"],
      "@backendTypes": ["../strona-parafialna-back/src/backendTypes/"]
    },
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
